<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<style name="kind">
		<item name="android:shadowDx">-0.66</item>
		<item name="android:shadowDy">-0.66</item>
		<item name="android:shadowRadius">0.66</item>
		<item name="android:shadowColor">#6000</item>
	</style>

	<style name="staffname">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">18sp</item>
		<!-- <item name="android:textColor">#5f4a18</item> -->
		<item name="android:textStyle">bold</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<!-- <item name="android:paddingLeft">10dp</item> -->
		<item name="android:shadowDx">-1</item>
		<item name="android:shadowDy">-1</item>
		<item name="android:shadowRadius">1</item>
		<item name="android:background">@drawable/bg_staffname_head</item>
	</style>

	<style name="customerlist">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">10dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:background">@drawable/bg_friendlist</item>
	</style>

	<style name="titleicon">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:background">@drawable/bg_separater</item>
	</style>

</resources>